# 기본: 텍스트 자동 정규화
* text=auto

# 코드/스크립트는 LF 고정
*.js    text eol=lf
*.jsx   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.mjs   text eol=lf
*.cjs   text eol=lf
*.json  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.sh    text eol=lf
*.gradle text eol=lf
gradlew text eol=lf

# 윈도우 전용 스크립트는 CRLF
*.bat   text eol=crlf
*.cmd   text eol=crlf
*.ps1   text eol=crlf

# 바이너리 파일
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.webp  binary
*.ico   binary
*.svg   binary
*.pdf   binary
*.zip   binary
*.gz    binary
*.jar   binary
*.woff  binary
*.woff2 binary
*.ttf   binary
*.eot   binary
*.mp4   binary
*.mov   binary
*.avi   binary
